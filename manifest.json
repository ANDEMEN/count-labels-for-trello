{
    "manifest_version": 2,

    "name": "Trello Color Count",
    "description": "Count trello label with color for easier communication in a team",
    "version": "1.0.0",

    "permissions": [
        "tabs",
        "https://trello.com/*"
    ],

    "browser_action": {
        "default_popup": "pop/popup.html"
    },

    "background": {
        "persistent": false,
        "scripts": ["background/background.js"]
    },

    "content_scripts": [{
        "matches": ["https://trello.com/*"],
        "css": [
            "index.css"
        ],
        "js": [
            "lib/jquery-3.1.1.js",
            "content.js"
        ]
    }]
}
